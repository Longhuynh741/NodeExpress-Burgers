


<div class="jumbotron jumbotron-fluid text-center">
  <div class="container">
    <h1 class="display-4">Burger Time!</h1>
  </div>
</div>

<div class = "container">
  <div class = "row">
    <div class = "col-md-6">
<h2>Dead Burger Walking! Next on the Eat List</h2>
<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{> burgers/burger-block devoured=true}}
    {{/unless}}
  {{/each}}
</ul>
</div>

  <div class = "col-md-6">
<h2> Burgers we ate!</h2>
<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{> burgers/burger-block devoured=false}}
    {{/if}}
  {{/each}}
</ul>
</div>
</div>

<h2>Order a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Name of Burger:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="devoured">History of this burger</label><br>
    <input type="radio" name="devoured" value="1" checked> New Burger. Lets order<br>
    <input type="radio" name="devoured" value="0"> I ate this one before
  </div>

  <button type="submit">Update the Burger</button>

  </div>

</form>